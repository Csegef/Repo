<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SimpleTodo.MainPage"
    Title="Filmek listája"
    BackgroundColor="#F4F4F4">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Filmek"
                   FontSize="30"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#333" />

            <Button Text="Új film felvétele"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Clicked="OnAddClicked"
                    />

            <CollectionView x:Name="FilmCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnFilmSelected">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="14"
                               Margin="0,10"
                               Padding="12"
                               HasShadow="True"
                               BorderColor="#DDDDDD">

                            <VerticalStackLayout Spacing="3">
                                <Label Text="{Binding cim}"
                                       FontSize="20"
                                       TextColor="#111"
                                       FontAttributes="Bold" />

                                <Label Text="{Binding mufaj}"
                                       TextColor="#444"
                                       FontSize="16" />

                                <Label Text="{Binding korhatar}"
                                       TextColor="#666"
                                       FontSize="14" />

                                <Label Text="{Binding vetites_datum}"
                                       TextColor="#777"
                                       FontSize="14" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
